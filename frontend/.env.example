# Database
DATABASE_URL="postgresql://user:password@localhost:5432/eventflow?schema=public"

# NextAuth Configuration
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# JWT Secret (must match gRPC and WebSocket services)
JWT_SECRET="your-jwt-secret-key-here"

# Google OAuth (if using Google login)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Backend Services URLs
# WebSocket Gateway URL (WebSocket service)
NEXT_PUBLIC_WS_URL="http://localhost:4000"

# gRPC HTTP Gateway URL (gRPC service)
BACKEND_HTTP_URL="http://localhost:4001"

# Site URL (for Socket.IO and other absolute URLs)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
